<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.samochodgui.HelloController">
    <BorderPane>
        <top>
            <MenuBar BorderPane.alignment="CENTER">
                <Menu mnemonicParsing="false" text="Plik">
                    <MenuItem mnemonicParsing="false" text="Close" />
                </Menu>
                <Menu mnemonicParsing="false" text="Edycja">
                    <MenuItem mnemonicParsing="false" text="Delete" />
                </Menu>
                <Menu mnemonicParsing="false" text="Pomoc">
                    <MenuItem mnemonicParsing="false" text="About" />
                </Menu>
            </MenuBar>
        </top>
        <left>
            <VBox BorderPane.alignment="TOP_LEFT">
                <TitledPane alignment="TOP_CENTER" text="Samochód" textAlignment="CENTER">
                    <VBox spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Model" />
                            <TextField fx:id="modelPojazduTextField" editable="false" onAction="#onModelPojazduTextField" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Nr rejestracyjny" />
                            <TextField fx:id="nrRejestracyjnyTextField" editable="false" onAction="#onNrRejestracyjnyTextField" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Waga" />
                            <TextField fx:id="wagaPojazduTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Prędkość" />
                            <TextField fx:id="predkoscPojazduTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Button fx:id="startButton" maxWidth="1.7976931348623157E308" onAction="#onStartButton" text="Włącz" HBox.hgrow="ALWAYS" />
                            <Button fx:id="offButton" maxWidth="1.7976931348623157E308" onAction="#onOffButton" text="Wyłącz" HBox.hgrow="ALWAYS" />
                            <Button fx:id="explodeButton" maxWidth="1.7976931348623157E308" onAction="#onDeleteCarButton" text="Wybuch" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </TitledPane>
                <TitledPane alignment="TOP_CENTER" text="Skrzynia biegów" textAlignment="CENTER">
                    <VBox spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Nazwa" />
                            <TextField fx:id="nazwaSkrzyniTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Cena" />
                            <TextField fx:id="cenaSkrzyniTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Waga" />
                            <TextField fx:id="wagaSkrzyniTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Bieg" />
                            <TextField fx:id="biegTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Button fx:id="zwiekszBiegButton" maxWidth="1.7976931348623157E308" onAction="#onZwiekszBiegButton" text="Zwiększ bieg" HBox.hgrow="ALWAYS" />
                            <Button fx:id="zmniejszBiegButton" maxWidth="1.7976931348623157E308" onAction="#onZmiejszBiegButton" text="Zmniejsz bieg" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </TitledPane>
                <TitledPane alignment="TOP_CENTER" text="Silnik" textAlignment="CENTER">
                    <VBox spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Nazwa" />
                            <TextField fx:id="nazwaSilnikaTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Cena" />
                            <TextField fx:id="cenaSilnikaTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Waga" />
                            <TextField fx:id="wagaSilnikaTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Obroty" />
                            <TextField fx:id="obrotySilnikaTextField" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Button fx:id="zwiekszObrotyButton" maxWidth="1.7976931348623157E308" onAction="#onZwiekszObrotyButton" text="Zwiększ obroty" HBox.hgrow="ALWAYS" />
                            <Button fx:id="zmniejszObrotyButton" maxWidth="1.7976931348623157E308" onAction="#onZmiejszObrotyButton" text="Zmiejsz obroty" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </TitledPane>
                <TitledPane alignment="TOP_CENTER" text="Sprzęgło" textAlignment="CENTER">
                    <VBox spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Nazwa" />
                            <TextField fx:id="nazwaSprzeglaTextBox" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Cena" />
                            <TextField fx:id="cenaSprzeglaTextBox" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Waga" />
                            <TextField fx:id="wagaSprzeglaTextBox" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Label text="Stan" />
                            <TextField fx:id="stanSprzeglaTextBox" editable="false" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <Button fx:id="sprzegloOnButton" maxWidth="1.7976931348623157E308" onAction="#onSprzegloOnButton" text="Naciśnij" HBox.hgrow="ALWAYS" />
                            <Button fx:id="sprzegloOffButton" maxWidth="1.7976931348623157E308" onAction="#onSprzegloOffButton" text="Zwolnij" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </TitledPane>
            </VBox>
        </left>
        <center>
            <VBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label alignment="CENTER" text="Samochód: " />
                    <ComboBox fx:id="carComboBox" onAction="#onCarComboBox" promptText="Samochód" />
                    <Button fx:id="newCarButton" onAction="#onNewCarButton" text="Dodaj nowy" />
                    <Button fx:id="deleteSamochodButton" onAction="#onDeleteCarButton" text="Usuń" />
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
                <AnchorPane fx:id="mapa" style="-fx-background-color: lime;" VBox.vgrow="ALWAYS">
                    <VBox fx:id="carIcon" alignment="CENTER">
                        <ImageView fx:id="carImageView" fitHeight="50" fitWidth="80" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="carImageLabel" alignment="CENTER" text="Seat Ibiza" textAlignment="CENTER" />
                    </VBox>
                </AnchorPane>
            </VBox>
        </center>
    </BorderPane>
</VBox>
